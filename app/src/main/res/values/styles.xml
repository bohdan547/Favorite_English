<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextViewHeaderStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/raleway_semi_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextViewMainStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewButtonStyle.Transparent">
        <item name="android:textColor">@color/brandColor2</item>
    </style>

    <style name="TextViewHeaderStyle.Registration">
        <item name="android:fontFamily">@font/raleway_medium</item>
    </style>

    <style name="TextViewHeaderStyle.Registration.Logo">
        <item name="android:textSize">9sp</item>
    </style>

    <style name="TextViewInputStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/raleway_light</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextViewInputStyle.Clickable">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/brandColor2</item>
    </style>

    <style name="TextViewMainStyle.IslandRegistration" parent="TextAppearance.AppCompat">
        <item name="android:textSize">13sp</item>
    </style>

</resources>

